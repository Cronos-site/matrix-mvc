@model IEnumerable<matrix.Models.Entidades.Postagem>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.mostraPagInicial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pessoa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mostraPagInicial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pessoa.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.idPost">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.idPost">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.idPost">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
